<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:id="@+id/event_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/header_event_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="3">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/image_event_list"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/ic_launcher" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name_event_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:text="Title"
                        android:layout_marginLeft="5dp" />
                    <TextView
                        android:id="@+id/title_event_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="title of the event"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="6"
                android:paddingTop="10dp">
                <TextView
                    android:id="@+id/event_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text=" Just now"
                    android:paddingLeft="5dp"
                    android:textSize="16dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="2"
                    android:drawableLeft="@drawable/calendar_icon_mini"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2">
                    <TextView
                        android:id="@+id/member_event"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" 0/∞"
                        android:drawableLeft="@drawable/event_member_icon"
                        android:textSize="16dp"
                        android:layout_weight="2"/>
                    <TextView
                        android:id="@+id/join_event_status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="not joined yet"
                        android:textSize="10dp"
                        android:visibility="invisible"
                        android:layout_weight="2"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/body_event_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:id="@+id/description_event_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin chi tiết"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <Button
                        android:id="@+id/accept_button"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:text="DETAIL"/>
                    <Button
                        android:id="@+id/get_list_button"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="list"/>
                    <Button
                        android:id="@+id/edit_button"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="edit"
                        android:visibility="gone"/>
                    <Button
                        android:id="@+id/del_button"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="delete"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>