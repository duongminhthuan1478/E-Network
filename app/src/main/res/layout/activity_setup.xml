<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".Account.SetupActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setup_profile_img"
        android:layout_marginTop="10dp"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/profile"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/setup_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="228dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/username"
        android:ems="10"
        android:hint="Tên người dùng"
        android:inputType="textMultiLine"
        android:padding="14dp"
        />
    <EditText
        android:id="@+id/setup_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/setup_username"
        android:background="@drawable/inputs"
        android:ems="10"
        android:padding="14dp"
        android:hint="full name"
        android:inputType="textMultiLine"
        android:drawableLeft="@drawable/name"
        />
    <EditText
        android:id="@+id/setup_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/setup_full_name"
        android:padding="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:hint="Nơi sống"
        android:inputType="textMultiLine"
        android:drawableLeft="@drawable/country"
        />
    <Button
        android:id="@+id/setup_save_infor_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Save"
        android:textSize="20sp"
        android:background="@drawable/button"
        android:textColor="@android:color/white"
        />

</RelativeLayout>